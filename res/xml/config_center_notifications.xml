<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
	android:title="@string/notifications_title">

    <PreferenceCategory
        android:key="notification_flash"
        android:title="@string/notification_flash_title" >

        <com.havoc.support.preferences.SystemSettingListPreference
            android:key="flashlight_on_call"
            android:title="@string/flashlight_on_call_title"
            android:entries="@array/flashlight_on_call_entries"
            android:entryValues="@array/flashlight_on_call_values"
            android:defaultValue="0" />

        <com.havoc.support.preferences.SystemSettingSwitchPreference
            android:key="flashlight_on_call_ignore_dnd"
            android:title="@string/flashlight_on_call_ignore_dnd_title"
            android:summary="@string/flashlight_on_call_ignore_dnd_summary"
            android:defaultValue="false" />

        <com.havoc.support.preferences.CustomSeekBarPreference
            android:key="flashlight_on_call_rate"
            android:title="@string/flashlight_on_call_rate_title"
            android:summary="@string/flashlight_on_call_rate_summary"
            android:max="5"
            settings:min="1"
            settings:defaultValue="1"
            settings:units="Hz" />

        <com.havoc.support.preferences.SystemSettingSwitchPreference
            android:key="flashlight_on_call_waiting"
            android:title="@string/flashlight_on_call_wait_title"
            android:summary="@string/flashlight_on_call_wait_summary"
            android:defaultValue="false" />

        <com.havoc.support.preferences.CustomSeekBarPreference
            android:key="flash_on_call_waiting_delay"
            android:max="1000"
            android:persistent="false"
            android:title="@string/flash_on_call_delay_title"
            settings:min="50"
            settings:units="ms"
            settings:interval="50"
            android:dependency="flash_on_call_waiting"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_screen"
        android:title="@string/notification_screen_title" >

        <com.havoc.support.preferences.SystemSettingMasterSwitchPreference
            android:key="pulse_ambient_light"
            android:fragment="com.havoc.config.center.fragments.EdgeLight"
            android:title="@string/pulse_ambient_light_title"
            android:summary="@string/pulse_ambient_light_summary"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_stat"
        android:title="@string/notification_stat">

        <com.havoc.support.preferences.GlobalSettingMasterSwitchPreference
            android:key="heads_up_notifications_enabled"
            android:fragment="com.havoc.config.center.fragments.HeadsUp"
            android:title="@string/heads_up_notifications"
            android:summary="@string/heads_up_notifications_summary"
            android:defaultValue="true" />

        <!--<com.havoc.support.preferences.SystemSettingMasterSwitchPreference
            android:key="status_bar_show_ticker"
            android:fragment="com.havoc.config.center.fragments.Ticker"
            android:title="@string/ticker_screen_title"
            android:summary="@string/ticker_screen_summary"
            android:defaultValue="false" />-->
    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_misc"
        android:title="@string/notification_misc">

        <com.havoc.support.preferences.SystemSettingSwitchPreference
            android:key="notification_headers"
            android:title="@string/notification_headers_title"
            android:summary="@string/notification_headers_summary"
            android:defaultValue="true" />

        <com.havoc.support.preferences.SystemSettingSwitchPreference
            android:key="notification_guts_kill_app_button"
            android:title="@string/notification_guts_kill_app_button_title"
            android:summary="@string/notification_guts_kill_app_button_summary"
            android:defaultValue="false" />

        <com.havoc.support.preferences.SystemSettingSwitchPreference
            android:key="notification_sound_vib_screen_on"
            android:title="@string/notification_sound_vib_screen_on_title"
            android:summary="@string/notification_sound_vib_screen_on_summary"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>
